<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trendy Web Design</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5em;
        }
        .hero {
            background-image: url('https://source.unsplash.com/random/1200x600');
            background-size: cover;
            color: rgb(47, 43, 43);
            text-align: center;
            padding: 100px 20px;
        }
        .hero h1 {
            font-size: 3em;
            font-weight: 700;
        }
        .hero p {
            font-size: 1.2em;
            margin-top: 20px;
        }
        .btn-cta {
            padding: 10px 20px;
            font-size: 1.2em;
        }
        .card img {
            max-height: 200px;
            object-fit: cover;
        }
        footer {
            background-color: #222;
            color: #ccc;
            text-align: center;
            padding: 20px;
            font-size: 0.9em;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Trendy Page</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Features</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            User
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/auth/login" >Login</a></li>
                            <li><a class="dropdown-item" href="/auth/signup" >Sign Up</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/auth/logout" id="logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1>Welcome to the Trendy Page</h1>
            <p>Your gateway to the latest trends in web design.</p>
            <button class="btn btn-primary btn-cta" onclick="showMessage()">Get Started</button>
        </div>
    </section>

    <!-- Card Section -->
    <section class="container my-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/random/300x200?1" class="card-img-top" alt="Image 1">
                    <div class="card-body">
                        <h5 class="card-title">Trendy Design 1</h5>
                        <p class="card-text">Explore the latest design trends and inspirations for modern websites.</p>
                        <a href="#" class="btn btn-dark">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://source.unsplash.com/random/300x200?2" class="card-img-top" alt="Image 2">
                    <div class="card-body">
                        <h5 class="card-title">Trendy Design 2</h5>
                        <p class="card-text">Discover new layouts, colors, and styles to enhance user experience.</p>
                        <a href="#" class="btn btn-dark">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://unsplash.com/s/photos/random-photo" class="card-img-top" alt="Image 3">
                    <div class="card-body">
                        <h5 class="card-title">Trendy Design 3</h5>
                        <p class="card-text">Get inspired by cutting-edge design ideas to boost your creativity.</p>
                        <a href="#" class="btn btn-dark">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2023 Trendy Page. All rights reserved.</p>
    </footer>

   
    <!-- Bootstrap JS and Custom Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showMessage() {
            alert('Welcome to the Trendy Page!');
        }

        // Login functionality
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;

            // Mock login process
            if (email === "user@example.com" && password === "password") {
                alert('Login successful!');
                document.getElementById('error-login').textContent = '';
                // Here you would typically redirect or change the UI accordingly
                const loginModal = bootstrap.Modal.getInstance(document.getElementById('loginModal'));
                loginModal.hide();
            } else {
                document.getElementById('error-login').textContent = 'Invalid email or password.';
            }
        });

        // Signup functionality
        document.getElementById('signupForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const email = document.getElementById('signup-email').value;
            const password = document.getElementById('signup-password').value;

            // Mock signup process
            alert('Sign up successful for ' + email);
            document.getElementById('error-signup').textContent = '';
            const signupModal = bootstrap.Modal.getInstance(document.getElementById('signupModal'));
            signupModal.hide();
        });

        // Logout functionality
        // document.getElementById('logout').addEventListener('click', () => {
        //     alert('Logout successful!');
            // Handle logout logic here
        // });
    </script>
</body>
</html>
